{
  "name": "@bond-london/gatsby-graphcms-components",
  "version": "1.1.1",
  "description": "Components shared across various Bond London projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Nick Randell <nick.randell@bond.fi>",
  "license": "MIT",
  "keywords": [
    "react",
    "gatsby",
    "gatsbyjs",
    "gatsby-component"
  ],
  "repository": {
    "url": "https://github.com/bond-london/gatsby-graphcms-components"
  },
  "files": [
    "dist",
    "custom.d.ts"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build:ts": "babel src --out-dir dist --extensions .ts,.tsx",
    "build:defs": "tsc --declaration --outDir dist --emitDeclarationOnly",
    "dev:ts": "babel -w src --out-dir dist --extensions .ts,.tsx",
    "dev:defs": "tsc -w --declaration --outDir dist --emitDeclarationOnly",
    "dev": "run-p dev:ts dev:defs",
    "prepare": "cross-env NODE_ENV=production yarn run build:ts && yarn run build:defs && husky install",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md}\"",
    "lint": "eslint --max-warnings 0 \"**/*.{js,jsx,ts,tsx}\"",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.15.8",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/react": "^17.0.0",
    "babel-preset-gatsby-package": "^1.14.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gatsby": "^3.14.3",
    "gatsby-plugin-image": "^1.14.1",
    "husky": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "release-it": "^14.11.6",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.x || ^17.x",
    "react-helmet": "^6.1.0"
  },
  "optionalDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@graphcms/rich-text-react-renderer": "^0.3.2",
    "@types/react-helmet": "^6.1.4",
    "lottie-web": "^5.7.14",
    "react-helmet": "^6.1.0"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": [
        "yarn run lint",
        "yarn run format",
        "yarn run prepare"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
